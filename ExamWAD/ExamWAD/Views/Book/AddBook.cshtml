@model ExamWAD.Models.Book

@{
    ViewBag.Title = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddBook</h2>
<div class="row">
    <div class="col-sm-6">

        @using (Html.BeginForm("AddBook", "Book", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Bookid)
                @Html.TextBoxFor(model => model.Bookid, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.DropDownListFor(model => model.Title, (SelectList)ViewBag.data, new { @class = "form-control" })
            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Author)
                    @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price)
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Image)
                    @Html.TextBoxFor(model => model.Image, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status, new { @class = "control-label col-sm-3" })
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.Status)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Thêm mới" class="btn btn-default" />
                    </div>
                </div>

        }

       

    </div>
    </div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

