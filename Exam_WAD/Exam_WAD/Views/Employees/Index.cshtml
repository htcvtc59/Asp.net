
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var liste = ViewBag.data;
    var grid = new WebGrid(source: liste, canSort: false,
        columnNames: new[] { "EmployeeID", "EmployeeName", "Department", "Salary"}, rowsPerPage: 10);
}
@Html.ActionLink("Thêm mới", "Employ", "Employees", null, new {@class="btn btn-success"})
<h2>Employees</h2>
@grid.GetHtml(columns: grid.Columns(
    grid.Column(columnName: "EmployeeID", header: "EmployeeID"),
    grid.Column(columnName: "EmployeeName", header: "EmployeeName"),
    grid.Column(columnName: "Department", header: "Department"),
    grid.Column(columnName: "Salary", header: "Salary")
    ))


